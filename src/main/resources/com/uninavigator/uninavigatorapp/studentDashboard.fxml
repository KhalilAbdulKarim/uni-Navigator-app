<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane  prefHeight="620.0" prefWidth="949.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uninavigator.uninavigatorapp.controllers.user.StudentDashboard">
    <top>
        <MenuBar prefHeight="27.0" prefWidth="839.0">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem onAction="#handleExit" text="Exit" />
                        <MenuItem onAction= "#handleLogout" text="Log Out"/>
                    </items>
                </Menu>
                <Menu text="Navigation">
                    <items>
                        <MenuItem onAction="#loadCourseEnrollment" text="Course Enrollment" />
                        <MenuItem onAction="#loadAcademicRecords" text="Academic Records" />
                        <MenuItem onAction="#loadProfile" text="Profile" />
                        <MenuItem onAction="#loadDashboard" text="Dashboard" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
   <center>
       <StackPane fx:id="contentArea">
       <VBox>
            <TableView fx:id="coursesTableView" managed="true" prefHeight="583.0" prefWidth="948.0" visible="true">
                <columns>
                    <TableColumn fx:id="courseIdColumn" text="Course ID">
                        <cellValueFactory><PropertyValueFactory property="courseId" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="courseNameColumn" text="Course Name">
                        <cellValueFactory><PropertyValueFactory property="courseName" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="instructorNameColumn" prefWidth="111.0" text="Instructor Name">
                        <cellValueFactory><PropertyValueFactory property="instructorName" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="scheduleColumn" prefWidth="109.0" text="Schedule">
                        <cellValueFactory><PropertyValueFactory property="schedule" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="descriptionColumn" prefWidth="126.0" text="Description">
                        <cellValueFactory><PropertyValueFactory property="description" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="capacityColumn" prefWidth="118.0" text="Capacity">
                        <cellValueFactory><PropertyValueFactory property="capacity" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="startDateColumn" prefWidth="184.0" text="Start Date">
                        <cellValueFactory><PropertyValueFactory property="startDate" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="endDateColumn" prefWidth="140.0" text="End Date">
                        <cellValueFactory><PropertyValueFactory property="endDate" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="actionColumn" prefWidth="274.0" text="Actions">
                    </TableColumn>
                </columns>
            </TableView>
                <HBox alignment="center" spacing="10" StackPane.alignment="TOP_CENTER">
                    <TextField fx:id="searchField" prefWidth="200" promptText="Search by course name..."/>
                    <Button onAction="#handleSearch" text="Search"/>
                    <Button onAction="#handleProjectManaging" mnemonicParsing="false" text="Project Management" visible="true"/>
                </HBox>
        </VBox>
       </StackPane>
   </center>
</BorderPane>
