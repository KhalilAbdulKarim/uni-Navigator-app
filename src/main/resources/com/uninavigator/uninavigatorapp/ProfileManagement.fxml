<?import javafx.scene.text.Text?>
<VBox fx:id="profileVBox" alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uninavigator.uninavigatorapp.controllers.ProfileManagement">
    <padding>
        <Insets top="20" bottom="20" right="50" left="50"/>
    </padding>

    <Text text="Profile Management" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="200"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="200"/>

        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="200"/>

        <Label text="First Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="200"/>

        <Label text="Last Name:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="200"/>

        <Label text="Date of Birth:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dobPicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>


        <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <Button text="Save" fx:id="saveButton" onAction="#handleSaveAction" style="-fx-font-size: 14px;"/>
            <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancelAction" style="-fx-font-size: 14px;"/>
        </HBox>
    </GridPane>
</VBox>