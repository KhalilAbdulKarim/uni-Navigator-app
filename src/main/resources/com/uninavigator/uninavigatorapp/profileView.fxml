    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="119.0" AnchorPane.rightAnchor="118.0" AnchorPane.topAnchor="64.0">
        <VBox spacing="30">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label fx:id="usernameLabel" graphicTextGap="8.0" text="Username: ">
                <font>
                    <Font name="System Italic" size="13.0" />
                </font>
            </Label>
            <Label fx:id="emailLabel" text="Email: " />
            <Label fx:id="firstNameLabel" text="First Name: " />
            <Label fx:id="lastNameLabel" text="Last Name: " />
            <Label fx:id="dobLabel" text="Date of Birth: " />
            <Label fx:id="roleLabel" text="Role: " />
        </VBox>
    </ScrollPane>

    <Button fx:id="editProfileButton" layoutX="119.0" layoutY="474.0" onAction="#handleEditAction" prefHeight="26.0" prefWidth="223.0" text="Edit Profile" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="119.0" AnchorPane.rightAnchor="526.0" />

    <Label layoutX="263.0" layoutY="35.0" text="PROFILE">
        <font>
            <Font name="Beirut Regular" size="16.0" />
        </font>
    </Label>

    <Button fx:id="backButton" layoutX="48.0" layoutY="33.0" mnemonicParsing="false" onAction="#handleBackAction" text="BACK" />
    <Button fx:id="instructorRequestButton" layoutX="284.0" layoutY="474.0" mnemonicParsing="false" onAction="#InstructorButtonHandling" prefHeight="26.0" prefWidth="152.0" text="Instructor Requests List" visible="false" />
    <Button fx:id="createCourseButton" layoutX="470.0" layoutY="474.0" mnemonicParsing="false" onAction="#createCourseButtonHandling" prefHeight="26.0" prefWidth="152.0" text="Create Course" visible="false" />
    

</AnchorPane>
