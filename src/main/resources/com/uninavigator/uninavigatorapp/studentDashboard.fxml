<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="587.0" prefWidth="839.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uninavigator.uninavigatorapp.controllers.StudentDashboard">


    <top>
        <MenuBar prefHeight="27.0" prefWidth="839.0">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem onAction="#handleExit" text="Exit" />
                    </items>
                </Menu>
                <Menu text="Navigation">
                    <items>
                        <MenuItem onAction="#loadCourseEnrollment" text="Course Enrollment" />
                        <MenuItem onAction="#loadProfileManagement" text="Profile Management" />
                        <MenuItem onAction="#loadAcademicRecords" text="Academic Records" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <StackPane fx:id="contentArea">
            <!-- Dynamic content will be loaded here -->
        </StackPane>
    </center>

</BorderPane>
